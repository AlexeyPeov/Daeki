<MySwiper@MDSwiperItem>
    FitImage:
        source: 'D:/PythonProj/images/back.png'
        radius: [20,]
            #allow_stretch: True
            #keep_ratio: False


<Options>:
    Label:
        text: "Найстройки"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
    Button:
        text: "Нажми"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}

<Favorite>:
    view: view

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size: (64, 64)
            size_hint: (1, None)

            Label:
                text:"Список понравившегося"

        ScrollView:
            id: view



<MyGrid>

    #MDScreen:
    #    MDSwiper:
    #        size_hint_y: None
    #        #height: root.height - toolbar.height - dp(40)
    #        #y: root.height - self.height - toolbar.height - dp(20)

    #        MySwiper:

    ImageButton:
        source: 'D:/PythonProj/images/фав.png'
        text: "Search"
        size_hint: None, None
        size: 30, 30
        on_release: root.btn1()
        pos: root.width/13, root.height*0.93

    Label:
        bold: True
        text: "Lefruit"
        font_size: "20sp"
        text_size: self.width, self.height
        pos: root.width/2.5, root.height*0.94
        color: (0, 0, 0, 1)

    ImageButton:
        source: app.project_dir + '/images/настройки.png'
        text: "Search"
        size_hint: None, None
        size: 30, 30
        on_release: root.btn2()
        pos: root.width/1.2, root.height*0.93

    BoxLayout
        orientation: "vertical"
        size: root.width, root.height-40

        padding: 10
        spacing: 20

        #MDSwiper:

        Image:
            source: app.project_dir + '/images/back.png'
            allow_stretch: True
            keep_ratio: False


            #GridLayout:
            #    cols:2

            BoxLayout
                orientation: "horizontal"
                size: root.width, root.height*7
                pos: 0, 80
                padding: 10
                spacing: 20
                
                Image:
                    id: bg_image
                    source: app.project_dir + '/images/BORAT!.jpg'
                    allow_stretch: True
                    keep_ratio: False
                    size: root.size
                    size_hint: 0.1, 0.1

            FloatLayout:
                pos: root.width/2.85, root.y+30
                size: 100, 40

                Image:
                    source: app.project_dir + '/images/Видж.png'
                    allow_stretch: True
                    keep_ratio: False
                    size: 100, 40
                    #pos_hint:{"center_x":0.3, "center_y":0.3}
                    pos: root.width/2.85, root.y+30

                Label:
                    bold:True
                    text:"*7.5/10"
                    pos: root.width/2.85, root.y+30


